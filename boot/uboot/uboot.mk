	$(if $(filter y, $(BR2_TARGET_UBOOT_ODROID)$(BR2_TARGET_UBOOT_ODROID_C2),y),
		cp -dpf $(@D)/sd_fuse/sd_fusing.sh $(BINARIES_DIR)/)
